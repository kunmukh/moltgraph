MOLTBOOK_API_KEY= <# your agent API key>
MOLTBOOK_BASE_URL=https://www.moltbook.com/api/v1

# Neo4j (inside Docker network)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change_me

# Crawler behavior
REQUESTS_PER_MINUTE=60
USER_AGENT=MoltGraphCrawler/0.1

# crawl controls
CRAWL_COMMENTS=1
COMMENTS_LIMIT_PER_POST=100000
FETCH_AGENT_PROFILES=1
PROFILE_LIMIT=100000
FETCH_POST_DETAILS=1
SCRAPE_AGENT_HTML=0
SUBMOLT_TOP_LIMIT=100000
MODERATOR_SUBMOLTS_LIMIT=100000
ENRICH_SUBMOLTS=1
ENRICH_SUBMOLTS_LIMIT=100000

# Agent profile refresh controls (weekly)
PROFILE_REFRESH_DAYS=7
PROFILE_REFRESH_LIMIT=500